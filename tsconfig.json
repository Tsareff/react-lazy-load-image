{
  "compilerOptions": {
    "target": "es6",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "declaration": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src", "@types"],
  "exclude": ["**/__tests__/**", "src/*.test.**", "**/?*spec.*", "*.js"]
}
